<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegisterActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/object"
            android:gravity="center"
            android:text="Good Morning"
            android:textColor="@color/words"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Level"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/object"
            android:gravity="center"
            android:padding="16dp"
            android:text="Level"
            android:textColor="@color/words"
            android:textColorHint="@color/words"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PointsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/object"
            android:gravity="center"
            android:padding="16dp"
            android:text="Punkty"
            android:textColor="@color/words"
            android:textColorHint="@color/words"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:text="Zadania aktywne"
            android:textColor="@color/button"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TasksActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/object"
            android:padding="16dp"
            android:text="Zadania aktywne"
            android:textColor="@color/words"
            android:textColorHint="@color/words"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="Zadania ukończone"
            android:textColor="@color/button"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TasksCompleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/object"
            android:padding="16dp"
            android:text="Zadania ukończone"
            android:textColor="@color/words"
            android:textColorHint="@color/words"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
